<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="2dp"

    cardUseCompatPadding="true"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dip"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="#fffbfb">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/lyRootReq">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ly01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="... "
                android:id="@+id/txtCode"
                android:layout_weight="1.00"
                android:gravity="right"
                android:layout_marginRight="50dp"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="کد مشتری"
                android:id="@+id/textView49"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ly02"
            android:layout_below="@id/ly01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/txtName"
                android:layout_weight="1.00"
                android:gravity="center|right"
                android:layout_marginRight="50dp"
                android:textColor="#000000"
                android:paddingRight="4dp"
                android:textSize="17sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="نام مشتری"
                android:id="@+id/textView50"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ly04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:layout_below="@id/ly02">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/txtAddress"
                android:layout_weight="1.00"
                android:gravity="right"
                android:layout_marginRight="50dp"
                android:textColor="#000000"
                android:paddingRight="4dp"
                android:textSize="17sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="آدرس"

                android:layout_marginBottom="10dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/ly04"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CFD8DC"
            android:id="@+id/lyKhat">

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/lyKhat"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imgPastLocation"
                android:layout_marginRight="15dp"
                android:src="@drawable/loupe"
                android:padding="8dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imgSetLocation"
                android:layout_marginRight="15dp"
                android:src="@drawable/add"
                android:padding="7dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/btnShowDetails"
                android:src="@drawable/locationyab"
                android:padding="8dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>