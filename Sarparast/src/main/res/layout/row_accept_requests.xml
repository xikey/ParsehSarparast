<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dip"
android:layoutDirection="ltr"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    android:background="#fffbfb"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lyRootReq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:padding="1dp">

        <TextView
            android:id="@+id/txtShomareSefaresh"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="New Text"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/txtShomareSefaresh"
            android:layout_toStartOf="@+id/txtShomareSefaresh"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="New Text"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtCodeMoshtari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtShomareSefaresh"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:text="New Text"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtNameMoshtari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtShomareSefaresh"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/txtCodeMoshtari"
            android:layout_toStartOf="@+id/txtCodeMoshtari"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="New Text"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtNameVizitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDate"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/txtNameMoshtari"
            android:layout_toStartOf="@+id/txtNameMoshtari"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="New Text"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtCodeMoshtari"
            android:layout_marginTop="8dp"
            android:paddingRight="16dp"
            android:text="مبلغ:"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCodeMoshtari"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/textView41"
            android:layout_toStartOf="@+id/textView41"
            android:gravity="right"
            android:paddingLeft="8dp"
            android:paddingRight="22dp"
            android:text="New Text"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView34"
            android:layout_marginTop="8dp"
            android:paddingRight="16dp"
            android:text="مانده حساب:"
            android:textColor="#B3e30000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMande"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtPrice"
            android:layout_alignStart="@+id/txtPrice"
            android:layout_below="@+id/txtPrice"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/textView41"
            android:layout_toStartOf="@+id/textView41"
            android:gravity="right"
            android:paddingLeft="8dp"
            android:paddingRight="20dp"
            android:text="New Text"
            android:textColor="#B3e30000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView36"
            android:layout_marginTop="8dp"
            android:paddingRight="16dp"
            android:text="مانده اعتبار:"
            android:textColor="#e30000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMandeEtebar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtPrice"
            android:layout_alignStart="@+id/txtPrice"
            android:layout_below="@+id/txtMande"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/textView41"
            android:layout_toStartOf="@+id/textView41"
            android:gravity="right"
            android:paddingLeft="8dp"
            android:paddingRight="20dp"
            android:text="New Text"
            android:textColor="#e30000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtShomareSefaresh"
            android:layout_alignRight="@+id/txtShomareSefaresh"
            android:layout_below="@+id/textView88"
            android:layout_marginTop="8dp"
            android:paddingRight="16dp"
            android:text="چک در جریان:"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView38"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="8dp"
            android:paddingRight="16dp"
            android:text="چک برگشتی:"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtJaryanR"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView38"
            android:layout_toLeftOf="@+id/textView41"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="New Text"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtJaryanT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtJaryanR"
            android:layout_marginRight="25dp"
            android:layout_toStartOf="@+id/txtJaryanR"
            android:gravity="center|right"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="New Text"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtBargashtR"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtJaryanR"
            android:layout_alignStart="@+id/txtJaryanR"
            android:layout_alignTop="@+id/textView41"
            android:layout_marginBottom="15dp"
            android:layout_toLeftOf="@+id/textView41"
            android:gravity="right"
            android:paddingLeft="8dp"
            android:paddingRight="20dp"
            android:text="New Text"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtBargashtT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtBargashtR"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="25dp"
            android:layout_toStartOf="@+id/txtBargashtR"
            android:gravity="center|right"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="New Text"
            android:textColor="#0c0000"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/lyKhat"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtBargashtR"
            android:layout_marginBottom="1dp"
            android:background="#CFD8DC"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:alpha="0.6"
            android:id="@+id/lyButtom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/lyKhat"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCall"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_weight="16.6"
                android:padding="10dp"
                android:src="@drawable/ic_call_black_24dp" />

            <ImageView
                android:id="@+id/imgInfo"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:layout_weight="16.6"
                android:padding="10dp"

                android:src="@drawable/ic_info_black" />

            <ImageView
                android:id="@+id/imgOrders"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:layout_weight="16.6"
                android:padding="10dp"
                android:src="@drawable/ic_dollar_black" />

            <ImageView
                android:id="@+id/btnShowDetails"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:layout_weight="16.6"
                android:padding="5dp"
                android:src="@drawable/ic_details_black_24dp1" />

            <ImageView
                android:id="@+id/btnForward"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="16.6"
                android:padding="5dp"
                android:src="@drawable/back" />

            <ImageView
                android:id="@+id/btnCancel"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="8dp"
                android:layout_toStartOf="@+id/btnShowDetails"
                android:layout_weight="16.6"
                android:padding="5dp"
                android:src="@drawable/cancell" />

            <ImageView
                android:id="@+id/btnAccept"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@+id/btnShowDetails"
                android:layout_weight="16.6"
                android:padding="5dp"
                android:src="@drawable/sucsess" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>