<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#e3dede"
    android:layout_height="match_parent" >

  <Button

    android:id="@+id/btnPieChart"
    android:layout_width="match_parent"
    android:layout_height="50dp"

    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:background="#303F9F"
    android:gravity="center"
    android:text="نمودار درصد فروش برندها"
    android:textColor="#ffffff"
    android:textSize="18sp" />

    <RelativeLayout



        android:layout_below="@id/btnPieChart"
        android:id="@+id/lyProgressPieChart"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent">

        </android.support.v7.widget.CardView>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/pieProgres"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:visibility="visible" />

    </RelativeLayout>


    <RelativeLayout

        android:layout_below="@id/btnPieChart"
        android:id="@+id/lyContentPieChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/lyPieChart"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart1"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>




</RelativeLayout>