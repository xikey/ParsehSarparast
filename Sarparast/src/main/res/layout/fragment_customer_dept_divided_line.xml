<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="1000dp"
    android:minWidth="1000dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lyHeader"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="16sp"
            android:src="@drawable/userm" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#575252" />

        <TextView
            android:id="@+id/textView55"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView5"
            android:gravity="center|right"
            android:text="کد"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView56"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_below="@+id/textView55"
            android:layout_toLeftOf="@+id/imageView5"
            android:gravity="center|right"
            android:text="نام"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView57"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_below="@+id/textView56"
            android:layout_toLeftOf="@+id/imageView5"
            android:gravity="center|right"
            android:text="مانده"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtCode"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView55"
            android:gravity="center"
            android:text="..."
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/txtCode"
            android:layout_below="@+id/txtCode"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtMande"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtName"
            android:layout_toLeftOf="@+id/textView57"
            android:gravity="center"
            android:text="..."
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:src="@drawable/error" />


    </RelativeLayout>


    <ScrollView
