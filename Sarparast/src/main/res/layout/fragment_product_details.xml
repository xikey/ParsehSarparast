<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    android:minWidth="1000dp"

    card_view:cardElevation="2dp"

    cardUseCompatPadding="true"
    android:layout_marginTop="18dp"
    android:layout_marginBottom="5dip"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="#e3dede">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lyContent"
            android:visibility="visible">


            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:id="@+id/lyEror"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اطلاعاتی جهت نمایش وجود ندارد٬!"
                android:id="@+id/txtEror"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:id="@+id/lyProgress"
            android:visibility="visible" >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:id="@+id/progressBar4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:visibility="visible" />
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lyRoot">

                <ScrollView
                    android:layout_below="@id/relativeLayout7"
                    android:layout_width="match_parent"
                   android:id="@+id/Scrol"
                    android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/relativeLayout7"
                                android:id="@+id/lyRows">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/relativeLayout7"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/relativeLayout8"
                                    android:layout_marginBottom="10dp">

                                    <TextView
                                        android:layout_width="90dp"
                                        android:layout_height="35dp"
                                        android:id="@+id/txtBarcode"
                                        android:gravity="center|right"
                                        android:text="بارکد"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginRight="10dp"
                                        android:padding="2dp"
                                        android:textSize="16sp"
                                        android:textColor="#000000"
                                        android:paddingRight="5dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="..."
                                        android:id="@+id/txtCode"
                                        android:layout_centerVertical="true"
                                        android:layout_toStartOf="@+id/txtBarcode"
                                        android:gravity="center"
                                        android:textSize="16sp"
                                        android:textColor="#000000"
                                        android:layout_marginLeft="10dp"
                                        android:layout_toLeftOf="@+id/txtBarcode" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#546E7A"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp"></LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/relativeLayout7"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/relativeLayout13"
                                    android:layout_marginBottom="10dp" >

                                    <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="35dp"
                                    android:id="@+id/txtModat"
                                    android:gravity="center|right"
                                    android:text="مدت"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginRight="10dp"
                                    android:padding="2dp"
                                    android:textSize="16sp"
                                    android:textColor="#000000"
                                        android:paddingRight="5dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="..."
                                        android:id="@+id/txtModat1"
                                        android:layout_centerVertical="true"
                                        android:layout_toStartOf="@+id/txtModat"
                                        android:gravity="center"
                                        android:textSize="16sp"
                                        android:textColor="#000000"
                                        android:layout_marginLeft="10dp"
                                        android:layout_toLeftOf="@+id/txtModat" />
                                </RelativeLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#546E7A"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/relativeLayout7"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/relativeLayout14"
                                    android:layout_marginBottom="10dp" >

                                    <TextView
                                        android:layout_width="90dp"
                                        android:layout_height="35dp"
                                        android:id="@+id/txtTedad"
                                        android:gravity="center|right"
                                        android:text="تعداد در بسته"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginRight="10dp"
                                        android:padding="2dp"
                                        android:textSize="16sp"
                                        android:textColor="#000000"
                                        android:paddingRight="5dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="..."
                                        android:id="@+id/txtTedad1"
                                        android:layout_centerVertical="true"
                                        android:layout_toStartOf="@+id/txtTedad"
                                        android:gravity="center"
                                        android:textSize="16sp"
                                        android:textColor="#000000"
                                        android:layout_marginLeft="10dp"
                                        android:layout_toLeftOf="@+id/txtTedad" />
                                </RelativeLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#546E7A"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/relativeLayout7"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/relativeLayout15"
                                    android:layout_marginBottom="10dp" >

                                    <TextView
                                        android:layout_width="90dp"
                                        android:layout_height="35dp"
                                        android:id="@+id/txtGAsli"
                                        android:gravity="center|right"
                                        android:text="گروه اصلی"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginRight="10dp"
                                        android:padding="2dp"
                                        android:textSize="16sp"
                                        android:textColor="#000000"
                                        android:paddingRight="5dp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="..."
                                        android:id="@+id/txtGAsli1"
                                        android:layout_centerVertical="true"
                                        android:layout_toStartOf="@+id/txtGAsli"
                                        android:gravity="center"
                                        android:textSize="16sp"
                                        android:textColor="#000000"
                                        android:layout_marginLeft="10dp"
                                        android:layout_toLeftOf="@+id/txtGAsli" />
                                </RelativeLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#546E7A"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="10dp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/relativeLayout7"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/relativeLayout16"
                                    android:layout_marginBottom="10dp" >

                                    <TextView
                                        android:layout_width="90dp"
                                        android:layout_height="35dp"
                                        android:id="@+id/txtGFarei"
                                        android:gravity="center|right"
                                        android:text="گروه فرعی"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginRight="10dp"
                                        android:padding="2dp"
                                        android:textSize="16sp"
                                        android:textColor="#000000"
                                        android:paddingRight="5dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="..."
                                        android:id="@+id/txtGFarei1"
                                        android:layout_centerVertical="true"
                                        android:layout_toStartOf="@+id/txtGFarei"
                                        android:gravity="center"
                                        android:textSize="16sp"
                                        android:textColor="#000000"
                                        android:layout_marginLeft="10dp"
                                        android:layout_toLeftOf="@+id/txtGFarei" />
                                </RelativeLayout>

                            </LinearLayout>
                </ScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#78909C"
                    android:id="@+id/relativeLayout7">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/imageView30"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/list4"
                        android:layout_marginRight="10dp"
                        android:padding="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:id="@+id/txtName"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/btnExit"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/error"
                        android:padding="6dp" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>



</android.support.v7.widget.CardView>