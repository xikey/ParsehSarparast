<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="7dp"
    cardUseCompatPadding="true"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:id="@+id/lyRoot"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:paddingRight="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtCodeName"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="#90A4AE"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="کل سفارشات"
            android:id="@+id/textView45"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/txtCodeName"
            android:layout_toStartOf="@+id/imageView21"
            android:textColor="#000000"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/txtKol"
            android:textSize="16sp"
            android:layout_alignTop="@+id/textView45"
            android:layout_alignParentStart="false"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_alignEnd="@+id/txtTaeed" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="فاکتور شده"
            android:id="@+id/textView58"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/textView45"
            android:layout_toStartOf="@+id/imageView20"
            android:layout_marginTop="10dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/txtFactorShode"
            android:textSize="16sp"
            android:layout_alignTop="@+id/textView58"
            android:layout_alignParentStart="false"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_alignEnd="@+id/txtTaeed" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView8"
            android:src="@drawable/green_cycle"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/textView58"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:padding="1dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="تایید شده"
            android:id="@+id/textView81"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/imageView8"
            android:layout_toStartOf="@+id/imageView8"
            android:textColor="#000000" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/txtTaeed"
            android:layout_alignTop="@+id/textView81"
            android:textSize="16sp"
            android:layout_alignParentStart="false"
            android:layout_toStartOf="@+id/textView81"
            android:gravity="center"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView9"
            android:src="@drawable/red_cycle"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/imageView8"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:clickable="false"
            android:padding="1dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text= "لغو شده"
            android:id="@+id/textView84"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/imageView9"
            android:layout_toStartOf="@+id/imageView9"
            android:textColor="#000000" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/txtTaeedNashode"
            android:textSize="16sp"
            android:layout_above="@+id/imageView19"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_alignLeft="@+id/txtErja"
            android:layout_alignStart="@+id/txtErja"
            android:layout_toLeftOf="@+id/textView84"
            android:layout_toStartOf="@+id/textView84" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView19"
            android:src="@drawable/yellow_cycle"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/imageView9"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:padding="1dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ارجاع داده شده"
            android:id="@+id/textView86"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/imageView19"
            android:layout_toStartOf="@+id/imageView19"
            android:textColor="#000000" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/txtErja"
            android:textSize="16sp"
            android:layout_alignTop="@+id/imageView19"
            android:layout_alignParentStart="false"
            android:layout_toStartOf="@+id/textView86"
            android:gravity="center"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView20"
            android:layout_alignBottom="@+id/textView58"
            android:layout_toEndOf="@+id/textView81"
            android:src="@drawable/successs" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView21"
            android:src="@drawable/circle"
            android:layout_alignBottom="@+id/textView45"
            android:layout_alignStart="@+id/imageView20"
            android:clickable="false"
            android:padding="1dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/txtRKol"
            android:layout_alignBottom="@+id/imageView21"
            android:layout_toLeftOf="@+id/txtKol"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/txtRFactorShode"
            android:layout_alignBottom="@+id/imageView20"
            android:layout_toLeftOf="@+id/txtFactorShode"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/txtRTaeedShode"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_toLeftOf="@+id/txtTaeed"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/txtRLaghv"
            android:layout_alignBottom="@+id/txtTaeedNashode"
            android:layout_toLeftOf="@+id/txtTaeedNashode"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/txtRErja"
            android:layout_alignBottom="@+id/imageView19"
            android:layout_toLeftOf="@+id/txtErja"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:gravity="center" />

    </RelativeLayout>


</android.support.v7.widget.CardView>