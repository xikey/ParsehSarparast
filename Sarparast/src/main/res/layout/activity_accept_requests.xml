<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.zikey.sarparast.ActivityAcceptRequests"
    android:background="#e3dede">


    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mhztoolbar"
        android:background="#0277BD"
        android:minHeight="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent">
        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/backsvg"
            android:layout_height="match_parent"
            android:id="@+id/imgBack" />
        <TextView
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:text="لیست درخواست ها (امروز) "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>



    <android.support.v7.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="2dp"

        cardUseCompatPadding="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="#fffbfb"
        android:id="@+id/view"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentEnd="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:layout_below="@+id/mhztoolbar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#e3dede">

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:gravity="right"
                android:background="#e3dede"
                android:layout_below="@+id/mhztoolbar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:background="#e3dede" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:id="@+id/txtRKol"
                        android:layout_weight="90"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:layout_marginRight="30dp"
                        android:textColor="#000000"
                        android:id="@+id/txtKol"
                        android:layout_marginTop="10dp"
                        android:gravity="right" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="کل سفارشات"
                        android:id="@+id/textView43"
                        android:layout_marginRight="10dp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView4"
                        android:cropToPadding="false"
                        android:padding="1dp"
                        android:src="@drawable/design_fab_background"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:background="#e3dede" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:background="#e3dede">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:id="@+id/txtRTaeed"
                        android:layout_weight="90"
                        android:gravity="center"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:id="@+id/txtTaeed"
                        android:layout_marginRight="30dp"
                        android:layout_gravity="right"
                        android:textColor="#000000"
                        android:gravity="right" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="تایید شده"
                        android:id="@+id/textView29"
                        android:layout_marginRight="10dp"
                        android:textColor="#000000" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView15"
                        android:cropToPadding="false"
                        android:padding="1dp"
                        android:src="@drawable/green_cycle"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="#e3dede" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:background="#e3dede">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:id="@+id/txtRLaghv"
                        android:layout_weight="90"
                        android:gravity="center"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:id="@+id/txtLaghv"
                        android:layout_marginRight="30dp"
                        android:layout_gravity="right"
                        android:textColor="#000000"
                        android:gravity="right" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="لغو شده"
                        android:id="@+id/textView30"
                        android:layout_marginRight="10dp"
                        android:textColor="#000000" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView16"
                        android:background="#e3dede"
                        android:cropToPadding="false"
                        android:padding="1dp"
                        android:src="@drawable/red_cycle"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp" />
                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:background="#e3dede"
                    android:id="@+id/lymmm">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:id="@+id/txtRErja"
                        android:layout_weight="90"
                        android:gravity="center"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:id="@+id/txtErja"
                        android:layout_marginRight="30dp"
                        android:layout_gravity="right"
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp"
                        android:gravity="right" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="ارجاع داده شده"
                        android:id="@+id/textView31"
                        android:layout_marginRight="10dp"
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageView17"
                        android:background="#e3dede"
                        android:cropToPadding="false"
                        android:padding="1dp"
                        android:src="@drawable/yellow_cycle"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>





    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_requests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:scrollbars="vertical"
        android:background="#e3dede"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout3"
        android:gravity="center_vertical"
        android:background="#0277BD"
        android:layout_below="@+id/mhztoolbar"
        android:layout_centerHorizontal="true">

        <EditText
            android:hint="جستجو"
            android:background="#0277BD"
            android:focusable="true"
            android:layout_width="match_parent"
            android:textColorHint="#ffffff"
            android:layout_height="match_parent"
            android:id="@+id/edtSearch"
            android:layout_weight="1"
            android:enabled="true"
            android:focusableInTouchMode="true"
            android:paddingRight="40dp"
            android:textColor="#ffffff"
            android:paddingLeft="10dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView26"
            android:src="@drawable/ic_search_black_24dp"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</RelativeLayout>
