<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="2dp"

    cardUseCompatPadding="true"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="5dip"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="#fffbfb">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#ffffff"
        android:id="@+id/lyRootReq"
        android:padding="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ly01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:weightSum="1"
            android:paddingTop="5dp"
            android:background="#90A4AE"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="... "
                android:id="@+id/txtName"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ly02"
            android:layout_below="@id/ly01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/txtTForosh"
                android:layout_weight="1.00"
                android:gravity="center|right"
                android:layout_marginRight="50dp"
                android:textColor="#000000"
                android:paddingRight="4dp"
                android:textSize="17sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="تعداد فروش"
                android:id="@+id/textView50"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ly03"
            android:layout_below="@id/ly02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."

                android:layout_weight="1.00"
                android:gravity="right"
                android:layout_marginRight="50dp"
                android:textColor="#000000"
                android:paddingRight="4dp"
                android:id="@+id/txtRForosh"
                android:textSize="17sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="ریال فروش"
                android:id="@+id/textView51"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ly04"
            android:layout_below="@id/ly03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/txtTBargasht"
                android:layout_weight="1.00"
                android:gravity="right"
                android:layout_marginRight="50dp"
                android:textColor="#f12525"
                android:paddingRight="4dp"
                android:textSize="17sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="تعداد برگشتی"

                android:layout_marginBottom="5dp"
                android:paddingRight="10dp"
                android:textColor="#f12525"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/linearLayout6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#e3dede"
            android:id="@+id/lyKhat">

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/linearLayout6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right">

            <ImageView
                android:layout_width="50dp"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:id="@+id/imgTarget"
                android:src="@drawable/target"

                android:layout_height="match_parent"
                android:visibility="gone" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imgNahve"
                android:src="@drawable/cardpay"
                android:layout_marginRight="10dp"
                android:padding="8dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/btnShowDetails"
                android:src="@drawable/details"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />




        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linearLayout5"
            android:layout_below="@+id/ly04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/txtRBargasht"
                android:layout_weight="1.00"
                android:gravity="right"
                android:layout_marginRight="50dp"
                android:textColor="#f12525"
                android:paddingRight="4dp"
                android:textSize="17sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="ریال برگشتی"
                android:layout_marginBottom="5dp"
                android:paddingRight="10dp"
                android:textColor="#f12525"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linearLayout6"
            android:layout_below="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="7dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/txtKhales"
                android:layout_weight="1.00"
                android:gravity="right"
                android:layout_marginRight="50dp"
                android:textColor="#0D47A1"
                android:paddingRight="4dp"
                android:textSize="17sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="خالص فروش"
                android:layout_marginBottom="10dp"
                android:paddingRight="10dp"
                android:textColor="#0D47A1"
                android:textSize="17sp" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>