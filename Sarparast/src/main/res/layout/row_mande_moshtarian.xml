<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dip"

    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="18dp"
    android:background="#fffbfb"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lyRootReq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:padding="1dp">

        <LinearLayout
            android:id="@+id/ly01"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="1">



            <TextView
                android:id="@+id/txtCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1.00"
                android:gravity="right"
                android:text="... "
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="کد مشتری"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly02"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly01"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1.00"
                android:gravity="center|right"
                android:paddingRight="4dp"
                android:text="..."
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="نام مشتری"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly03"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly02"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtMande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1.00"
                android:gravity="right"
                android:paddingRight="4dp"
                android:text="..."
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="مانده مشتری"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:id="@+id/ly04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly03"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtVaset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1.00"
                android:gravity="right"
                android:paddingRight="4dp"
                android:text="..."
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingRight="10dp"
                android:text="نام واسط اصلی"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:id="@+id/lyAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly04"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1.00"
                android:gravity="right"
                android:paddingRight="4dp"
                android:text="..."
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingRight="10dp"
                android:text="آدرس"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
android:layout_marginTop="10dp"
            android:id="@+id/lyKhat"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/lyAddress"
            android:background="#e3dede"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:alpha="0.8"
            android:id="@+id/lyButtom"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/lyKhat"
            android:layout_marginTop="1dp"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
               android:alpha="0.8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                              android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgDislike"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="7dp"
                    android:clickable="true"
                    android:background="@drawable/bg_btn_dark"
                    android:layout_weight="14.8"
                    android:padding="10dp"
                    android:src="@drawable/ic_dislike_black" />

                <ImageView
                    android:id="@+id/imgLike"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:background="@drawable/bg_btn_dark"
                    android:layout_marginRight="7dp"
                    android:layout_weight="14.8"
                    android:padding="10dp"
                    android:src="@drawable/ic_like_blavk" />

                <ImageView
                    android:id="@+id/imgNavigate"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:background="@drawable/bg_btn_dark"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="7dp"
                    android:layout_weight="14.8"
                    android:padding="10dp"
                    android:src="@drawable/ic_location_black" />

                <ImageView
                    android:id="@+id/imgCall"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:background="@drawable/bg_btn_dark"
                    android:layout_marginRight="7dp"
                    android:layout_weight="14.8"
                    android:padding="10dp"
                    android:src="@drawable/ic_call_black_24dp" />

                <ImageView
                    android:id="@+id/imgInfo"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:background="@drawable/bg_btn_dark"
                    android:layout_marginRight="7dp"
                    android:layout_weight="14.8"
                    android:padding="10dp"
                    android:src="@drawable/ic_info_black" />

                <ImageView
                    android:id="@+id/img5Vijegi"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:background="@drawable/bg_btn_dark"
                    android:layout_marginRight="7dp"
                    android:layout_weight="14.8"
                    android:padding="10dp"
                    android:src="@drawable/ic_person_black_24dp" />

                <ImageView
                    android:id="@+id/btnShowDetails"
                    android:layout_width="50dp"
                    android:clickable="true"
                    android:background="@drawable/bg_btn_dark"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="7dp"
                    android:layout_weight="14.8"
                    android:padding="10dp"
                    android:src="@drawable/ic_dollar_black" />
            </LinearLayout>
            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </View>

            <LinearLayout
                android:alpha="0.8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="7dp"
                    android:layout_weight="14.8"
                    android:padding="10dp"
                    />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="7dp"
                    android:layout_weight="14.8"
                    android:padding="10dp"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="7dp"
                    android:layout_weight="14.8"
                    android:padding="10dp"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="7dp"
                    android:layout_weight="14.8"
                    android:padding="10dp"
                  />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="7dp"
                    android:layout_weight="14.8"
                    android:clickable="true"
                    android:background="@drawable/bg_btn_dark"
                    android:id="@+id/unvisited"
                    android:padding="10dp"
                    android:src="@drawable/ic_shopping_cart" />
                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:id="@+id/imgMandehLine"
                    android:layout_marginRight="7dp"
                    android:layout_weight="14.8"
                    android:clickable="true"
                    android:background="@drawable/bg_btn_dark"
                    android:padding="10dp"
                    android:src="@drawable/ic_error_outline_blue_24dp" />

                <ImageView
                    android:id="@+id/imgQuestions"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="7dp"
                    android:clickable="true"
                    android:background="@drawable/bg_btn_dark"
                    android:layout_weight="14.8"
                    android:padding="10dp"
                    android:src="@drawable/ic_assignment_violet_24dp"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>