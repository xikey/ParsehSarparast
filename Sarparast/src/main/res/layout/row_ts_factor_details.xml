<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="7dp"
    cardUseCompatPadding="true"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="5dip"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="#ffffff">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="0.95">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/txtCodeKala"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_weight="99"
                    android:gravity="right"
                    android:paddingLeft="6dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="کد کالا"
                    android:id="@+id/textView107"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_weight="99"
                    android:gravity="right"
                    android:id="@+id/txtCode"
                    android:paddingLeft="6dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="نام کالا"
                    android:id="@+id/textView109"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/txtTedad"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_weight="99"
                    android:gravity="right"
                    android:paddingLeft="6dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="تعداد"
                    android:id="@+id/textView111"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/txtFi"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_weight="99"
                    android:gravity="right"
                    android:paddingLeft="6dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="فی"
                    android:id="@+id/textView113"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/txtTakhfifD"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_weight="99"
                    android:gravity="right"
                    android:paddingLeft="6dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="تخفیف درصدی"
                    android:id="@+id/textView96"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/txtPriceKol"
                    android:layout_marginRight="10dp"
                    android:textColor="#ee0202"
                    android:textSize="16sp"
                    android:layout_weight="99"
                    android:gravity="right"
                    android:paddingLeft="6dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="مبلغ نهایی"
                    android:id="@+id/textView98"
                    android:layout_marginRight="10dp"
                    android:textColor="#ee0202"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="left|center">

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView14"
            android:layout_gravity="center_vertical"
            android:background="#a8a8a8"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="222"
            android:id="@+id/txtRowNumber"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>